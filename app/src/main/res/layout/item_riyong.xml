<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/x223"
    android:paddingLeft="8dp"
    android:paddingBottom="17dp"
    android:paddingRight="16dp"
    android:orientation="vertical"
    >

    <ImageView
        android:layout_width="@dimen/x151"
        android:layout_height="@dimen/x152" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        
    <TextView
        android:layout_marginTop="18dp"
        android:id="@+id/you"
        android:layout_width="@dimen/x21"
        android:layout_height="@dimen/x19"
        android:textSize="10sp"
        android:textColor="#fff"
        android:layout_marginLeft="13dp"
        android:text="包邮"
        android:background="#ff5000"
        android:gravity="center"
        />

        <TextView
            android:id="@+id/wuyong1"
            android:layout_width="@dimen/x118"
            android:layout_height="@dimen/x19"
            android:layout_marginTop="18dp"
            android:textColor="#333333"
            android:textSize="13sp"
            android:gravity="center"
            android:layout_toRightOf="@id/you"
            android:text="@string/zhanwei2"
            />
        
        <TextView
            android:id="@+id/wuyong"
            android:layout_width="@dimen/x35"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textSize="11sp"
            android:layout_below="@id/you"
            android:layout_marginLeft="13dp"
            android:text="原价:   $"
            />
        <TextView
            android:id="@+id/pricee"
            android:layout_width="@dimen/x38"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/wuyong"
            android:layout_below="@id/wuyong1"
            android:layout_marginTop="8dp"
            android:textSize="11sp"
            android:text="100000"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/pricee"
            android:layout_below="@id/wuyong1"
            android:textSize="17sp"
            android:layout_marginTop="5dp"
            android:text="$99.0"

            android:layout_marginLeft="10dp"
            android:textColor="#e60012"


            />
        




    </RelativeLayout>




</LinearLayout>
